<?xml version="1.0" encoding="utf-8"?>
<manifest package="io.github.rlshep.bjcp2015beerstyles"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true"/>

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/bjcp_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="io.github.rlshep.bjcp2015beerstyles.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
        <activity android:name="io.github.rlshep.bjcp2015beerstyles.SubCategoryListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.github.rlshep.bjcp2015beerstyles.MainActivity"/>
        </activity>
        <activity
            android:name="io.github.rlshep.bjcp2015beerstyles.SubCategoryBodyActivity"
            android:label="@string/title_activity_sub_category_body">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.github.rlshep.bjcp2015beerstyles.SubCategoryListActivity"/>
        </activity>
        <activity
            android:name="io.github.rlshep.bjcp2015beerstyles.AboutActivity"
            android:label="@string/title_activity_about">
        </activity>
        <activity
            android:name="io.github.rlshep.bjcp2015beerstyles.SearchResultsActivity"
            android:label="@string/title_activity_search_results">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.github.rlshep.bjcp2015beerstyles.MainActivity"/>
        </activity>
    </application>
</manifest>