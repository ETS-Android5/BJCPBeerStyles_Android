<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.rlshep.bjcp2015beerstyles" >
    <supports-screens android:smallScreens="true"
                      android:normalScreens="true"
                      android:largeScreens="true"
                      android:xlargeScreens="true"
                      android:anyDensity="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/bjcp_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="io.github.rlshep.bjcp2015beerstyles.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="io.github.rlshep.bjcp2015beerstyles.SubCategoryListActivity" >
        </activity>
        <activity
            android:name="io.github.rlshep.bjcp2015beerstyles.SubCategoryBodyActivity"
            android:label="@string/title_activity_sub_category_body" >
        </activity>
        <activity
            android:name="io.github.rlshep.bjcp2015beerstyles.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
    </application>

</manifest>
